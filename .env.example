# ============================================
# ENVIRONMENT CONFIGURATION
# Copy this file to .env and update values
# ============================================

# ===== APPLICATION =====
NODE_ENV=development
PORT=8000

# ===== JWT AUTHENTICATION =====
JWT_SECRET=koperasi-secret-key-2024-change-this-in-production
JWT_EXPIRES_IN=7d

# ===== CORS CONFIGURATION =====
# Multiple origins separated by comma
# Examples:
# Single origin: http://localhost:3000
# Multiple: http://localhost:3000,http://localhost:5173
# All origins: *
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ===== DATABASE CONFIGURATION =====
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=koperasi_db

# ===== POINT SYSTEM (Optional - can be changed via API) =====
# Enable/disable point system
POINT_ENABLED=true

# Point calculation mode: GLOBAL | PER_PRODUCT | PER_CATEGORY
POINT_SYSTEM_MODE=GLOBAL

# How much Rupiah per 1 point (for GLOBAL mode)
POINT_PER_AMOUNT=1000

# Decimal rounding: UP | DOWN | NEAREST
POINT_DECIMAL_ROUNDING=DOWN

# Minimum transaction amount to earn points (Rp)
MIN_TRANSACTION_FOR_POINTS=0

# Point expiry in months (0 = never expire)
POINT_EXPIRY_MONTHS=12

# ===== OPTIONAL: RATE LIMITING =====
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# ===== OPTIONAL: FILE UPLOAD =====
# MAX_FILE_SIZE=5242880
# UPLOAD_DIR=./uploads

# ===== NOTES =====
# 1. Never commit .env to git!
# 2. Change JWT_SECRET in production
# 3. Set NODE_ENV=production for deployment
# 4. Point settings can be changed via API without restart