{
  "name": "koperasi-pos-backend",
  "version": "1.0.0",
  "description": "Koperasi POS Backend API with Point System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "node test-api.js",
    "seed:admin": "node src/seeders/createAdminUser.js",
    "seed:members": "node src/seeders/seedMembers.js",
    "seed:members:advanced": "node src/seeders/seedMembersAdvanced.js",
    "seed:products": "node src/seeders/seedProducts.js",
    "seed:suppliers": "node src/seeders/seedSuppliers.js",
    "seed:categories": "node src/seeders/seedCategories.js",
    "seed:settings": "node src/seeders/seedSettings.js",
    "seed:all": "npm run seed:admin && npm run seed:categories && npm run seed:suppliers && npm run seed:products && npm run seed:members && npm run seed:settings",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop koperasi-pos-api",
    "pm2:restart": "pm2 restart koperasi-pos-api",
    "pm2:reload": "pm2 reload koperasi-pos-api",
    "pm2:delete": "pm2 delete koperasi-pos-api",
    "pm2:logs": "pm2 logs koperasi-pos-api",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save",
    "logs:clear": "rm -rf logs/*.log",
    "logs:view": "tail -f logs/combined.log"
  },
  "keywords": [
    "pos",
    "koperasi",
    "express",
    "sequelize",
    "point-system",
    "loyalty"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-timeout": "^1.9.1",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
